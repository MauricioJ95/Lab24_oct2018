
@{
    ViewBag.Title = "ItemAdmin";
}

<h2>ItemAdmin</h2>

<table border="1" class="table">

    @foreach (var item in ViewBag.Items)
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.Quantity
            </td>
            <td>
                @item.Price
            </td>
            <td>
                <a href="/Home/ItemDetails?name=@item.Name">Edit</a>
            </td>
        </tr>


    }
</table>